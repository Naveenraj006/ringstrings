<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RezDataTheme" parent="@android:style/Theme.Light">
        <item name="android:textAppearance">@style/RezTextView</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="RezTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="RezHeaderText" parent="@style/RezTextView">
        <item name="android:textSize">17.0sp</item>
        <item name="android:shadowDx">2.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">3.0</item>
    </style>
    <style name="RezDescText" parent="@style/RezTextView">
        <item name="android:textStyle">italic</item>
    </style>
</resources>
